<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Numbers activity theme. -->
    <style name="numbersTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/numbers</item>
        <item name="colorPrimaryDark">@color/numbersDark</item>
        <item name="colorAccent">@color/numbers</item>
    </style>

    <!-- Colors activity theme. -->
